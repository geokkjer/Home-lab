[filter "lfs"]
	smudge = git-lfs smudge -- %f
	clean = git-lfs clean -- %f
	process = git-lfs filter-process
	required = true

[init]
	defaultBranch = main

[core]
	editor = emacs
	excludesfile = ~/.config/git/ignore_global

[color]
	ui = auto

[pull]
	rebase = true

[merge]
	tool = vimdiff

[diff]
	# Use external diff tool if desired; comment out if unused
	# tool = meld

[alias]
	st = status -sb
	co = checkout
	br = branch
	ci = commit
	unstage = reset HEAD --
	last = log -1 HEAD
	lg = log --graph --pretty=format:'%C(yellow)%h%Creset %C(cyan)%ad%Creset %C(green)%an%Creset %C(magenta)%d%Creset %s' --date=short --all
	amend = commit --amend --no-edit
	rb = rebase

[credential]
	# Use the credential helper you prefer; examples:
